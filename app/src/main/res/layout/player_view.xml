<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/item_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewPlayer"
        android:layout_alignEnd="@id/item_player_input_score"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/imageViewPlayer"
        android:text="Player # here"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewPlayer"
        android:layout_width="93dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="13dp"
        android:adjustViewBounds="true"
        android:maxWidth="140dp"
        android:maxHeight="140dp"
        app:srcCompat="@drawable/ic_baseline_emoji_people_24" />

    <TextView
        android:id="@+id/item_player_input_score"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_player_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/imageViewPlayer"
        android:text="Player Input Score"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>