<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bkg"
    tools:context=".AddOrEditGameConfigActivity">

  <TextView
      android:id="@+id/txtAddName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="128dp"
      android:text="@string/name"
      android:textColor="#3F51B5"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0" />

  <TextView
      android:id="@+id/txtAddPoorScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="64dp"
      android:text="@string/poor_score"
      android:textColor="#3F51B5"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtAddName"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/txtAddGreatScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="64dp"
      android:text="@string/great_score"
      android:textColor="#3F51B5"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtAddPoorScore"
      app:layout_constraintVertical_bias="0.0" />

  <EditText
      android:id="@+id/editAddPoorScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="32dp"
      android:ems="10"
      android:inputType="numberSigned"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/txtAddPoorScore"
      app:layout_constraintTop_toBottomOf="@+id/editAddName"
      app:layout_constraintVertical_bias="0"
      tools:ignore="Autofill,LabelFor" />

  <EditText
      android:id="@+id/editAddName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="110dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/txtAddPoorScore"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <EditText
      android:id="@+id/editAddGreatScore"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="40dp"
      android:ems="10"
      android:inputType="numberSigned"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/txtAddGreatScore"
      app:layout_constraintTop_toBottomOf="@+id/editAddPoorScore"
      app:layout_constraintVertical_bias="0" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fabCameraBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.878"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.914"
      app:srcCompat="@android:drawable/ic_menu_camera" />

  <ImageView
      android:id="@+id/gameConfigImage"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHeight_percent="0.45"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editAddGreatScore"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0"
      app:layout_constraintWidth_percent="0.45"
      tools:srcCompat="@drawable/no_image_available" />

</androidx.constraintlayout.widget.ConstraintLayout>